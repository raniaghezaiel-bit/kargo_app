{% extends 'base.html.twig' %}

{% block title %}Connexion - Kar&Go{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card card-custom">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-bus-front-fill" style="font-size: 3rem; color: var(--primary-color);"></i>
                    <h2 class="mt-3 mb-1">Kar&Go</h2>
                    <p class="text-muted">Réservation de places de bus</p>
                </div>

                <h4 class="text-center mb-4">Connexion</h4>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">
                            <i class="bi bi-envelope"></i> Email
                        </label>
                        <input type="email" value="{{ last_username }}" name="_username" 
                               id="inputEmail" class="form-control" 
                               placeholder="votre@email.com" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">
                            <i class="bi bi-lock"></i> Mot de passe
                        </label>
                        <input type="password" name="_password" id="inputPassword" 
                               class="form-control" placeholder="Mot de passe" required>
                    </div>

                    <input type="hidden" name="_csrf_token" 
                           value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-primary-custom btn-lg" type="submit">
                            <i class="bi bi-box-arrow-in-right"></i> Se connecter
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="text-muted mb-0">Pas encore de compte ?</p>
                        <a href="{{ path('app_register') }}" class="text-decoration-none">
                            Créer un compte passager
                        </a>
                    </div>
                </form>

                <hr class="my-4">

                <div class="alert alert-info small mb-0">
                    <strong><i class="bi bi-info-circle"></i> Compte de test :</strong><br>
                    <strong>Admin:</strong> admin@kargo.tn / admin123<br>
                    <strong>Passager:</strong> passager@test.tn / pass123
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
