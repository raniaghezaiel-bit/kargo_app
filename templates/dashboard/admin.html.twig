{% extends 'base.html.twig' %}

{% block title %}Panneau Admin - Kar&Go{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card card-custom mb-4" style="background: linear-gradient(135deg, #9333ea 0%, #7c3aed 100%);">
            <div class="card-body text-center p-5 text-white">
                <i class="bi bi-shield-check" style="font-size: 4rem;"></i>
                <h2 class="mt-3 mb-2">Panneau d'Administration</h2>
                <p class="mb-0">Gérez votre plateforme Kar&Go</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card card-custom h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-bus-front" style="font-size: 2rem; color: var(--admin-color);"></i>
                    <h5 class="ms-3 mb-0">Gérer les Bus</h5>
                </div>
                <p class="text-muted mb-3">Ajouter, modifier ou supprimer des bus de la flotte</p>
                <button class="btn btn-outline-secondary w-100" disabled>
                    <i class="bi bi-plus-circle"></i> Accéder à la gestion
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card card-custom h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-person-badge" style="font-size: 2rem; color: var(--admin-color);"></i>
                    <h5 class="ms-3 mb-0">Gérer les Chauffeurs</h5>
                </div>
                <p class="text-muted mb-3">Gérer les informations et les affectations des chauffeurs</p>
                <button class="btn btn-outline-secondary w-100" disabled>
                    <i class="bi bi-plus-circle"></i> Accéder à la gestion
                </button>
            </div>
        </div>
    </div>

   <div class="col-md-6">
    <div class="card card-custom h-100">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-bus-front" style="font-size: 2rem; color: var(--admin-color);"></i>
                <h5 class="ms-3 mb-0">Gérer les Bus</h5>
            </div>
            <p class="text-muted mb-3">Ajouter, modifier ou supprimer des bus de la flotte</p>
            <a href="{{ path('app_bus_index') }}" class="btn btn-outline-primary w-100">
                <i class="bi bi-arrow-right-circle"></i> Accéder à la gestion
            </a>
        </div>
    </div>
</div>

    <div class="col-md-6">
        <div class="card card-custom h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-clock" style="font-size: 2rem; color: var(--admin-color);"></i>
                    <h5 class="ms-3 mb-0">Gérer les Horaires</h5>
                </div>
                <p class="text-muted mb-3">Définir les horaires de départ et d'arrivée</p>
                <button class="btn btn-outline-secondary w-100" disabled>
                    <i class="bi bi-plus-circle"></i> Accéder à la gestion
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card card-custom h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-ticket-detailed" style="font-size: 2rem; color: var(--admin-color);"></i>
                    <h5 class="ms-3 mb-0">Gérer les Réservations</h5>
                </div>
                <p class="text-muted mb-3">Voir et gérer toutes les réservations</p>
                <button class="btn btn-outline-secondary w-100" disabled>
                    <i class="bi bi-plus-circle"></i> Accéder à la gestion
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card card-custom h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-graph-up" style="font-size: 2rem; color: var(--admin-color);"></i>
                    <h5 class="ms-3 mb-0">Statistiques</h5>
                </div>
                <p class="text-muted mb-3">Consulter les statistiques de la plateforme</p>
                <button class="btn btn-outline-secondary w-100" disabled>
                    <i class="bi bi-plus-circle"></i> Voir les statistiques
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> <strong>Sprint 1 : Authentification</strong> - 
            Les fonctionnalités de gestion seront implémentées dans les prochains sprints.
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12 text-center">
        <a href="{{ path('app_dashboard') }}" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}