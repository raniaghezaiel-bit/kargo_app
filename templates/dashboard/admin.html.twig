{% extends 'base.html.twig' %}

{% block title %}Panneau Admin - Kar&Go{% endblock %}

{% block body %}
<div class="admin-dashboard-container">
    <div class="container-fluid px-4 py-4">
        
        <!-- Header Card -->
        <div class="row">
            <div class="col-12">
                <div class="card card-custom mb-4" style="background: linear-gradient(135deg, #9333ea 0%, #7c3aed 100%);">
                    <div class="card-body text-center p-5 text-white">
                        <i class="fas fa-shield-check" style="font-size: 4rem;"></i>
                        <h2 class="mt-3 mb-2">Panneau d'Administration</h2>
                        <p class="mb-0">Gérez votre plateforme Kar&Go</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Management Cards -->
        <div class="row g-4">
            
            <!-- Gérer les Bus -->
            <div class="col-md-6">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-purple">
                                <i class="fas fa-bus"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Bus</h5>
                        </div>
                        <p class="text-muted mb-3">Ajouter, modifier ou supprimer des bus de la flotte</p>
                        <a href="{{ path('app_bus_index') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-arrow-circle-right"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gérer les Chauffeurs -->
            <div class="col-md-6">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-primary">
                                <i class="fas fa-user-tie"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Chauffeurs</h5>
                        </div>
                        <p class="text-muted mb-3">Gérer les informations et les affectations des chauffeurs</p>
                        <a href="{{ path('admin_chauffeur_index') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-arrow-circle-right"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gérer les Horaires ✅ CORRIGÉ -->
            <div class="col-md-6">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-info">
                                <i class="fas fa-clock"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Horaires</h5>
                        </div>
                        <p class="text-muted mb-3">Définir les horaires de départ et d'arrivée</p>
                        <a href="{{ path('admin_horaire_index') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-arrow-circle-right"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gérer les Réservations -->
            <div class="col-md-6">
    <div class="card card-custom h-100">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-ticket-detailed" style="font-size: 2rem; color: var(--admin-color);"></i>
                <h5 class="ms-3 mb-0">Gérer les Réservations</h5>
            </div>
            <p class="text-muted mb-3">Voir et gérer toutes les réservations</p>
            <a href="{{ path('app_admin_reservations') }}" class="btn btn-outline-primary w-100">
                <i class="bi bi-arrow-right-circle"></i> Accéder à la gestion
            </a>
        </div>
    </div>
</div>

            <!-- Statistiques -->
            <div class="col-md-6">
                <div class="card card-custom h-100 management-card disabled-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-warning">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Statistiques</h5>
                        </div>
                        <p class="text-muted mb-3">Consulter les statistiques de la plateforme</p>
                        <button class="btn btn-outline-secondary w-100" disabled>
                            <i class="fas fa-chart-bar"></i> Voir les statistiques
                        </button>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> Bientôt disponible
                        </small>
                    </div>
                </div>
            </div>

            <!-- Gérer les Utilisateurs -->
            <div class="col-md-6">
                <div class="card card-custom h-100 management-card disabled-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-danger">
                                <i class="fas fa-users"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Utilisateurs</h5>
                        </div>
                        <p class="text-muted mb-3">Gérer les comptes et les permissions des utilisateurs</p>
                        <button class="btn btn-outline-secondary w-100" disabled>
                            <i class="fas fa-plus-circle"></i> Accéder à la gestion
                        </button>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> Bientôt disponible
                        </small>
                    </div>
                </div>
            </div>

        </div>

        <!-- Info Alert -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info d-flex align-items-center">
                    <i class="fas fa-info-circle me-3" style="font-size: 1.5rem;"></i>
                    <div>
                        <strong>Progression du projet</strong> - 
                        Sprint actuel : Gestion des Bus, Chauffeurs et Horaires. Les autres fonctionnalités seront implémentées progressivement.
                    </div>
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="row mt-3">
            <div class="col-12 text-center">
                <a href="{{ path('app_dashboard') }}" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Retour au tableau de bord
                </a>
            </div>
        </div>

    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .admin-dashboard-container {
        background: #f8fafc;
        min-height: 100vh;
        padding-top: 80px;
    }

    .card-custom {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .management-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .management-card.disabled-card {
        opacity: 0.7;
    }

    .management-card.disabled-card:hover {
        transform: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .icon-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
    }

    .bg-purple {
        background: linear-gradient(135deg, #9333ea, #7c3aed);
    }

    .bg-primary {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
    }

    .bg-info {
        background: linear-gradient(135deg, #06b6d4, #0891b2);
    }

    .bg-success {
        background: linear-gradient(135deg, #10b981, #059669);
    }

    .bg-warning {
        background: linear-gradient(135deg, #f59e0b, #d97706);
    }

    .bg-danger {
        background: linear-gradient(135deg, #ef4444, #dc2626);
    }

    .btn-action {
        font-weight: 600;
        transition: all 0.3s ease;
        border-width: 2px;
    }

    .btn-action:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .alert {
        border-radius: 12px;
        border: none;
    }

    .alert-info {
        background: linear-gradient(135deg, #e0f2fe, #bae6fd);
        color: #075985;
    }

    h5 {
        font-weight: 700;
        color: #1e293b;
    }

    .text-muted {
        color: #64748b !important;
    }

    @media (max-width: 768px) {
        .admin-dashboard-container {
            padding-top: 100px;
        }

        .icon-wrapper {
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
        }

        h5 {
            font-size: 1.1rem;
        }
    }
</style>
{% endblock %}