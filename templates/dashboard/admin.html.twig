{% extends 'base.html.twig' %}

{% block title %}Panneau Admin - Kar&Go{% endblock %}

{% block body %}
<div class="admin-dashboard-container">
    <div class="container-fluid px-4 py-4">
        
        <!-- Admin Info Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card card-custom border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="d-flex align-items-center">
                                    <div class="admin-avatar">
                                        {{ app.user.prenom|first }}{{ app.user.nom|first }}
                                    </div>
                                    <div class="ms-4">
                                        <h4 class="mb-1">{{ app.user.prenom }} {{ app.user.nom }}</h4>
                                        <p class="text-muted mb-1">
                                            <i class="fas fa-shield-alt text-danger"></i> Administrateur
                                        </p>
                                        <div class="admin-contact-info">
                                            <span class="me-3">
                                                <i class="fas fa-envelope text-primary"></i> {{ app.user.email }}
                                            </span>
                                            {% if app.user.telephone %}
                                                <span>
                                                    <i class="fas fa-phone text-success"></i> {{ app.user.telephone }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                <span class="badge bg-success px-3 py-2">
                                    <i class="fas fa-circle-check"></i> Connecté
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Header Card -->
        <div class="row">
            <div class="col-12">
                <div class="card card-custom mb-4" style="background: linear-gradient(135deg, #9333ea 0%, #7c3aed 100%);">
                    <div class="card-body text-center p-5 text-white">
                        <i class="fas fa-shield-check" style="font-size: 4rem;"></i>
                        <h2 class="mt-3 mb-2">Panneau d'Administration</h2>
                        <p class="mb-0">Gérez votre plateforme Kar&Go</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Management Cards -->
        <div class="row g-4">
            
            <!-- Gérer les Bus -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-purple">
                                <i class="fas fa-bus"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Bus</h5>
                        </div>
                        <p class="text-muted mb-3">Ajouter, modifier ou supprimer des bus de la flotte</p>
                        <a href="{{ path('app_bus_index') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-arrow-circle-right"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gérer les Chauffeurs -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-primary">
                                <i class="fas fa-user-tie"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Chauffeurs</h5>
                        </div>
                        <p class="text-muted mb-3">Gérer les informations et les affectations des chauffeurs</p>
                        <a href="{{ path('admin_chauffeur_index') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-arrow-circle-right"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gérer les Horaires -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-info">
                                <i class="fas fa-clock"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Horaires</h5>
                        </div>
                        <p class="text-muted mb-3">Définir les horaires de départ et d'arrivée</p>
                        <a href="{{ path('admin_horaire_index') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-arrow-circle-right"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gérer les Réservations -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-success">
                                <i class="fas fa-ticket-alt"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Réservations</h5>
                        </div>
                        <p class="text-muted mb-3">Voir et gérer toutes les réservations</p>
                        <a href="{{ path('app_admin_reservations') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-arrow-circle-right"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-warning">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Statistiques</h5>
                        </div>
                        <p class="text-muted mb-3">Consulter les statistiques de la plateforme</p>
                        <a href="{{ path('app_admin_statistiques') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-chart-bar"></i> Voir les statistiques
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gérer les Utilisateurs -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom h-100 management-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper bg-danger">
                                <i class="fas fa-users"></i>
                            </div>
                            <h5 class="ms-3 mb-0">Gérer les Utilisateurs</h5>
                        </div>
                        <p class="text-muted mb-3">Gérer les comptes et les permissions des utilisateurs</p>
                        <a href="{{ path('app_admin_users') }}" class="btn btn-outline-primary w-100 btn-action">
                            <i class="fas fa-plus-circle"></i> Accéder à la gestion
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <!-- Info Alert -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info d-flex align-items-center">
                    <i class="fas fa-info-circle me-3" style="font-size: 1.5rem;"></i>
                    <div>
                        <strong>Plateforme opérationnelle</strong> - 
                        Toutes les fonctionnalités principales sont disponibles. Vous pouvez gérer l'ensemble de la plateforme Kar&Go.
                    </div>
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="row mt-3">
            <div class="col-12 text-center">
                <a href="{{ path('app_home') }}" class="btn btn-secondary btn-lg">
                    <i class="fas fa-home"></i> Retour à l'accueil
                </a>
            </div>
        </div>

    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .admin-dashboard-container {
        background: #f8fafc;
        min-height: 100vh;
        padding-top: 80px;
    }

    .admin-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #9333ea, #7c3aed);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
        box-shadow: 0 4px 12px rgba(147, 51, 234, 0.3);
    }

    .admin-contact-info {
        font-size: 0.9rem;
        color: #64748b;
    }

    .admin-contact-info i {
        font-size: 0.85rem;
    }

    .card-custom {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .management-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .icon-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
    }

    .bg-purple {
        background: linear-gradient(135deg, #9333ea, #7c3aed);
    }

    .bg-primary {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
    }

    .bg-info {
        background: linear-gradient(135deg, #06b6d4, #0891b2);
    }

    .bg-success {
        background: linear-gradient(135deg, #10b981, #059669);
    }

    .bg-warning {
        background: linear-gradient(135deg, #f59e0b, #d97706);
    }

    .bg-danger {
        background: linear-gradient(135deg, #ef4444, #dc2626);
    }

    .btn-action {
        font-weight: 600;
        transition: all 0.3s ease;
        border-width: 2px;
    }

    .btn-action:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .alert {
        border-radius: 12px;
        border: none;
    }

    .alert-info {
        background: linear-gradient(135deg, #e0f2fe, #bae6fd);
        color: #075985;
    }

    h4, h5 {
        font-weight: 700;
        color: #1e293b;
    }

    .text-muted {
        color: #64748b !important;
    }

    @media (max-width: 768px) {
        .admin-dashboard-container {
            padding-top: 100px;
        }

        .admin-avatar {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .icon-wrapper {
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
        }

        h5 {
            font-size: 1.1rem;
        }
    }
</style>
{% endblock %}