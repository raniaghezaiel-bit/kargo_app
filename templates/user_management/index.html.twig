{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs - Kar&Go{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4" style="padding-top: 100px;">
    
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2">
                <i class="fas fa-users text-primary"></i>
                Gestion des Utilisateurs
            </h1>
            <p class="text-muted">Gérer les comptes et les permissions</p>
        </div>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour au panneau admin
        </a>
    </div>

    <!-- Statistiques -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Total Utilisateurs</h6>
                            <h2 class="mb-0">{{ stats.total }}</h2>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Administrateurs</h6>
                            <h2 class="mb-0">{{ stats.admins }}</h2>
                        </div>
                        <i class="fas fa-user-shield fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Passagers</h6>
                            <h2 class="mb-0">{{ stats.passagers }}</h2>
                        </div>
                        <i class="fas fa-user fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h6 class="mb-0">
                        <i class="fas fa-filter"></i> Filtrer par type
                    </h6>
                </div>
                <div class="col-md-6">
                    <div class="btn-group w-100" role="group">
                        <a href="{{ path('app_admin_users', {type: 'all'}) }}" 
                           class="btn btn-sm {{ current_filter == 'all' ? 'btn-primary' : 'btn-outline-primary' }}">
                            Tous
                        </a>
                        <a href="{{ path('app_admin_users', {type: 'admin'}) }}" 
                           class="btn btn-sm {{ current_filter == 'admin' ? 'btn-primary' : 'btn-outline-primary' }}">
                            Administrateurs
                        </a>
                        <a href="{{ path('app_admin_users', {type: 'passager'}) }}" 
                           class="btn btn-sm {{ current_filter == 'passager' ? 'btn-primary' : 'btn-outline-primary' }}">
                            Passagers
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table des utilisateurs -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-table"></i> Liste des utilisateurs
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nom complet</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Rôle</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td><strong>#{{ user.id }}</strong></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center">
                                            {{ user.prenom|first }}{{ user.nom|first }}
                                        </div>
                                        <div>
                                            <strong>{{ user.nom }} {{ user.prenom }}</strong>
                                            {% if user.id == app.user.id %}
                                                <span class="badge bg-secondary ms-2">Vous</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <i class="fas fa-envelope text-muted"></i>
                                    {{ user.email }}
                                </td>
                                <td>
                                    {% if user.telephone %}
                                        <i class="fas fa-phone text-muted"></i>
                                        {{ user.telephone }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="badge bg-danger">
                                            <i class="fas fa-user-shield"></i> Administrateur
                                        </span>
                                    {% else %}
                                        <span class="badge bg-info">
                                            <i class="fas fa-user"></i> Passager
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" 
                                           class="btn btn-outline-primary" 
                                           title="Voir détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        
                                        {% if user.id != app.user.id %}
                                            <form method="post" 
                                                  action="{{ path('app_admin_user_toggle_role', {'id': user.id}) }}" 
                                                  style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('toggle-role' ~ user.id) }}">
                                                <button type="submit" 
                                                        class="btn btn-outline-warning" 
                                                        title="{{ 'ROLE_ADMIN' in user.roles ? 'Rétrograder en passager' : 'Promouvoir en admin' }}">
                                                    <i class="fas fa-exchange-alt"></i>
                                                </button>
                                            </form>
                                            
                                            <form method="post" 
                                                  action="{{ path('app_admin_user_delete', {'id': user.id}) }}" 
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">
                                    Aucun utilisateur trouvé
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 1rem;
        font-weight: bold;
    }
    
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .table tbody tr {
        transition: all 0.2s;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .card {
        border-radius: 12px;
    }
    
    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
    }
</style>
{% endblock %}