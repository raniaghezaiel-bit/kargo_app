                                <i class="fas fa-user-circle"></i> {{ app.user.prenom }} {{ app.user.nom }}
                            </span>
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-light">
                                <i class="fas fa-sign-out-alt"></i> DÃ©connexion
                            </a>
                        </div>
                    {% else %}
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_login') }}" class="btn btn-outline-light">
                                <i class="fas fa-sign-in-alt"></i> Connexion
                            </a>
                            <a href="{{ path('app_register') }}" class="btn btn-light">
