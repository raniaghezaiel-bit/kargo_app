{% extends 'base.html.twig' %}

{% block title %}Inscription - Kar&Go{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card card-custom">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: var(--primary-color);"></i>
                    <h2 class="mt-3">Inscription Passager</h2>
                    <p class="text-muted">Créez votre compte pour réserver vos places</p>
                </div>

                {{ form_start(registrationForm) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.prenom) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.email) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.telephone) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.adresse) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.first) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(registrationForm.plainPassword.second) }}
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary-custom btn-lg">
                            <i class="bi bi-check-circle"></i> S'inscrire
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="text-muted mb-0">Vous avez déjà un compte ?</p>
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            Se connecter
                        </a>
                    </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}


