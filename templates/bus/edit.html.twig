{% extends 'base.html.twig' %}

{% block title %}Modifier le Bus {{ bus.numero }} - Kar&Go{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>
                        Modifier le Bus {{ bus.numero }}
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.numero, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.numero) }}
                        {{ form_errors(form.numero) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.capacite, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.capacite) }}
                        {{ form_errors(form.capacite) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.type, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.type) }}
                        {{ form_errors(form.type) }}
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_admin_bus_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        {{ form_widget(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Informations sur les trajets associés -->
            {% if bus.trajets|length > 0 %}
                <div class="card mt-3 border-warning">
                    <div class="card-header bg-warning text-dark">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Trajets associés à ce bus
                    </div>
                    <div class="card-body">
                        <p>Ce bus est actuellement assigné à <strong>{{ bus.trajets|length }}</strong> trajet(s).</p>
                        <p class="text-muted mb-0">
                            <small>Les modifications apporteront des changements aux trajets existants.</small>
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}