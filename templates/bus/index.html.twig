{% extends 'base.html.twig' %}

{% block title %}Gestion des Bus - Kar&Go{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-0">
                <i class="bi bi-bus-front me-2" style="color: #7c3aed;"></i>
                Gestion des Bus
            </h1>
            <p class="text-muted">Ajouter, modifier ou supprimer des bus de la flotte</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('app_bus_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Ajouter un Bus
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if buses is empty %}
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-bus-front" style="font-size: 4rem; color: #d1d5db;"></i>
                <h3 class="mt-3">Aucun bus dans la flotte</h3>
                <p class="text-muted">Commencez par ajouter votre premier bus</p>
                <a href="{{ path('app_bus_new') }}" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle me-2"></i>Ajouter un Bus
                </a>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Matricule</th>
                                <th>Capacité</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for bus in buses %}
                                <tr>
                                    <td>{{ bus.id }}</td>
                                    <td>
                                        <strong>{{ bus.numero }}</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ bus.capacite }} places</span>
                                    </td>
                                    <td>
                                        {% if bus.type == 'VIP' %}
                                            <span class="badge bg-warning text-dark">{{ bus.type }}</span>
                                        {% elseif bus.type == 'Confort' %}
                                            <span class="badge bg-success">{{ bus.type }}</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ bus.type }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_bus_show', {'id': bus.id}) }}" 
                                               class="btn btn-outline-info" 
                                               title="Voir les détails">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_bus_edit', {'id': bus.id}) }}" 
                                               class="btn btn-outline-primary" 
                                               title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal{{ bus.id }}"
                                                    title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Modal de confirmation de suppression -->
                                        <div class="modal fade" id="deleteModal{{ bus.id }}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmer la suppression</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Êtes-vous sûr de vouloir supprimer le bus <strong>{{ bus.numero }}</strong> ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <form method="post" action="{{ path('app_bus_delete', {'id': bus.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bus.id) }}">
                                                            <button type="submit" class="btn btn-danger">Supprimer</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">Total : <strong>{{ buses|length }}</strong> bus dans la flotte</p>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour au dashboard
        </a>
    </div>
</div>

<style>
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
    
    .table thead {
        position: sticky;
        top: 0;
        z-index: 10;
    }
</style>
{% endblock %}