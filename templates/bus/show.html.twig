{% extends 'base.html.twig' %}

{% block title %}Bus {{ bus.numero }} - Kar&Go{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <!-- En-tête -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-bus-front me-2" style="color: #7c3aed;"></i>
                    Détails du Bus
                </h1>
                <div>
                    <a href="{{ path('app_admin_bus_edit', {'id': bus.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Modifier
                    </a>
                    <a href="{{ path('app_admin_bus_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            <!-- Informations principales -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Informations du Bus</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Numéro de Matricule</label>
                            <h5 class="fw-bold">{{ bus.numero }}</h5>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Capacité</label>
                            <h5>
                                <span class="badge bg-info fs-6">{{ bus.capacite }} places</span>
                            </h5>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Type de Bus</label>
                            <h5>
                                {% if bus.type == 'VIP' %}
                                    <span class="badge bg-warning text-dark fs-6">{{ bus.type }}</span>
                                {% else %}
                                    <span class="badge bg-secondary fs-6">{{ bus.type }}</span>
                                {% endif %}
                            </h5>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Trajets Assignés</label>
                            <h5>
                                <span class="badge bg-primary fs-6">{{ bus.trajets|length }} trajets</span>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Liste des trajets -->
            {% if bus.trajets|length > 0 %}
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-pin-map me-2"></i>
                            Trajets Assignés
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            {% for trajet in bus.trajets %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">
                                                <i class="bi bi-geo-alt-fill text-success me-1"></i>
                                                {{ trajet.depart }} 
                                                <i class="bi bi-arrow-right mx-2"></i>
                                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                                {{ trajet.arrivee }}
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar3 me-1"></i>
                                                {{ trajet.date|date('d/m/Y') }} à {{ trajet.date|date('H:i') }}
                                            </small>
                                        </div>
                                        <span class="badge bg-info">{{ trajet.distance }} km</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Ce bus n'est actuellement assigné à aucun trajet.
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="card mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Zone de Danger</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        Une fois supprimé, ce bus ne pourra plus être récupéré.
                        {% if bus.trajets|length > 0 %}
                            <strong class="text-danger">Attention : Ce bus est assigné à {{ bus.trajets|length }} trajet(s).</strong>
                        {% endif %}
                    </p>
                    <button type="button" 
                            class="btn btn-danger" 
                            data-bs-toggle="modal" 
                            data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-2"></i>Supprimer ce Bus
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous absolument sûr de vouloir supprimer le bus <strong>{{ bus.numero }}</strong> ?</p>
                {% if bus.trajets|length > 0 %}
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Ce bus est assigné à <strong>{{ bus.trajets|length }}</strong> trajet(s). 
                        La suppression sera impossible tant qu'il est utilisé.
                    </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_admin_bus_delete', {'id': bus.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bus.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Supprimer Définitivement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}