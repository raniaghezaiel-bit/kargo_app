{% extends 'base.html.twig' %}

{% block title %}Détail Réservation {{ reservation.numeroReservation }} - Kar&Go{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <a href="{{ path('app_admin_reservations') }}" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left me-2"></i>Retour à la liste
            </a>
            <h1>
                <i class="bi bi-ticket-detailed me-2"></i>
                Réservation {{ reservation.numeroReservation }}
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations de la réservation</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Statut :</strong>
                            {% if reservation.statut == 'confirmee' %}
                                <span class="badge bg-success">Confirmée</span>
                            {% elseif reservation.statut == 'en_attente' %}
                                <span class="badge bg-warning">En attente</span>
                            {% else %}
                                <span class="badge bg-danger">Annulée</span>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <strong>Date de réservation :</strong><br>
                            {{ reservation.dateReservation|date('d/m/Y à H:i') }}
                        </div>
                    </div>

                    <hr>

                    <h6>Trajet</h6>
                    <p class="mb-2">
                        <strong>{{ reservation.horaire.trajet.depart }}</strong> 
                        <i class="bi bi-arrow-right text-primary"></i> 
                        <strong>{{ reservation.horaire.trajet.destination }}</strong>
                    </p>
                    <p class="text-muted mb-0">
                        <i class="bi bi-road"></i> {{ reservation.horaire.trajet.distance }} km
                    </p>

                    <hr>

                    <h6>Date et heure du voyage</h6>
                    <p class="mb-2">
                        <i class="bi bi-calendar"></i> {{ reservation.horaire.dateDepart|date('d/m/Y') }}
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-clock"></i> Départ : {{ reservation.horaire.heureDepart|date('H:i') }} 
                        - Arrivée : {{ reservation.horaire.heureArrivee|date('H:i') }}
                    </p>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Nombre de places</h6>
                            <p class="mb-0">
                                <span class="badge bg-info">{{ reservation.nombrePlaces }} place(s)</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Montant total</h6>
                            <h4 class="text-primary mb-0">{{ reservation.montant }} DT</h4>
                        </div>
                    </div>

                    {% if reservation.qrCode %}
                        <hr>
                        <h6>QR Code</h6>
                        <p class="font-monospace">{{ reservation.qrCode }}</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Passager</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>{{ reservation.passager.prenom }} {{ reservation.passager.nom }}</strong>
                    </p>
                    <p class="mb-2">
                        <i class="bi bi-envelope"></i> {{ reservation.passager.email }}
                    </p>
                    {% if reservation.passager.telephone %}
                        <p class="mb-2">
                            <i class="bi bi-phone"></i> {{ reservation.passager.telephone }}
                        </p>
                    {% endif %}
                    {% if reservation.passager.adresse %}
                        <p class="mb-0">
                            <i class="bi bi-geo-alt"></i> {{ reservation.passager.adresse }}
                        </p>
                    {% endif %}
                </div>
            </div>

            {% if reservation.horaire.trajet.bus %}
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Bus assigné</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>{{ reservation.horaire.trajet.bus.numero }}</strong>
                        </p>
                        <p class="mb-2">
                            <i class="bi bi-people"></i> Capacité : {{ reservation.horaire.trajet.bus.capacite }} places
                        </p>
                        <p class="mb-0">
                            <i class="bi bi-star"></i> Type : {{ reservation.horaire.trajet.bus.type }}
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}