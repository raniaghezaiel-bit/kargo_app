{% extends 'base.html.twig' %}

{% block title %}Gestion des Réservations - Admin{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4" style="padding-top: 100px;">
    
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2">
                <i class="fas fa-ticket-alt text-primary"></i>
                Gestion des Réservations
            </h1>
            <p class="text-muted">Visualiser et gérer toutes les réservations</p>
        </div>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour au panneau admin
        </a>
    </div>

    <!-- Statistiques -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Total Réservations</h6>
                            <h2 class="mb-0">{{ stats.total }}</h2>
                        </div>
                        <i class="fas fa-list fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Confirmées</h6>
                            <h2 class="mb-0">{{ stats.confirmees }}</h2>
                        </div>
                        <i class="fas fa-check-circle fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-danger bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Annulées</h6>
                            <h2 class="mb-0">{{ stats.annulees }}</h2>
                        </div>
                        <i class="fas fa-times-circle fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table des réservations -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-table"></i> Liste des réservations
            </h5>
        </div>
        <div class="card-body p-0">
            {% if reservations is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Aucune réservation pour le moment</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>N° Réservation</th>
                                <th>Passager</th>
                                <th>Trajet</th>
                                <th>Date départ</th>
                                <th>Places</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td>
                                        <strong class="text-primary">{{ reservation.numeroReservation }}</strong>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>{{ reservation.passager.nom }} {{ reservation.passager.prenom }}</strong>
                                        </div>
                                        <small class="text-muted">{{ reservation.passager.email }}</small>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>{{ reservation.horaire.trajet.villeDepart }}</strong>
                                            <i class="fas fa-arrow-right text-muted mx-1"></i>
                                            <strong>{{ reservation.horaire.trajet.villeArrivee }}</strong>
                                        </div>
                                        <small class="text-muted">Bus: {{ reservation.horaire.bus.numeroImmatriculation }}</small>
                                    </td>
                                    <td>
                                        <div>{{ reservation.horaire.dateDepart|date('d/m/Y') }}</div>
                                        <small class="text-muted">{{ reservation.horaire.heureDepart|date('H:i') }}</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ reservation.nombrePlaces }} place(s)</span>
                                    </td>
                                    <td>
                                        <strong>{{ reservation.montant }} TND</strong>
                                    </td>
                                    <td>
                                        {% if reservation.statut == 'confirmee' %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Confirmée
                                            </span>
                                        {% elseif reservation.statut == 'annulee' %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Annulée
                                            </span>
                                        {% else %}
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> En attente
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_admin_reservation_show', {'id': reservation.id}) }}" 
                                               class="btn btn-outline-primary" 
                                               title="Voir détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            
                                            {% if reservation.statut == 'confirmee' %}
                                                <form method="post" 
                                                      action="{{ path('app_admin_reservation_cancel', {'id': reservation.id}) }}" 
                                                      style="display: inline;"
                                                      onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
                                                    <button type="submit" class="btn btn-outline-danger" title="Annuler">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .table tbody tr {
        transition: all 0.2s;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
    }
    
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
    }
    
    .card {
        border-radius: 12px;
    }
    
    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
    }
</style>
{% endblock %}