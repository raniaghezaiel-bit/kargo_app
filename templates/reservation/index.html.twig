{% extends 'base.html.twig' %}

{% block title %}Gestion des Réservations - Kar&Go{% endblock %}

{% block body %}
<div class="container mt-5">
    {# En-tête #}
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-0">
                <i class="bi bi-ticket-perforated me-2" style="color: #7c3aed;"></i>
                Gestion des Réservations
            </h1>
            <p class="text-muted">Voir et gérer toutes les réservations des passagers</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Retour au dashboard
            </a>
        </div>
    </div>

    {# Statistiques #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-ticket-detailed" style="font-size: 2rem; color: #06b6d4;"></i>
                    <h3 class="mt-2 mb-0">{{ stats.total }}</h3>
                    <p class="text-muted mb-0">Total</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-check-circle" style="font-size: 2rem; color: #10b981;"></i>
                    <h3 class="mt-2 mb-0">{{ stats.confirmees }}</h3>
                    <p class="text-muted mb-0">Confirmées</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-clock-history" style="font-size: 2rem; color: #f59e0b;"></i>
                    <h3 class="mt-2 mb-0">{{ stats.en_attente }}</h3>
                    <p class="text-muted mb-0">En attente</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-x-circle" style="font-size: 2rem; color: #ef4444;"></i>
                    <h3 class="mt-2 mb-0">{{ stats.annulees }}</h3>
                    <p class="text-muted mb-0">Annulées</p>
                </div>
            </div>
        </div>
    </div>

    {# Filtres #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Statut</label>
                    <select name="statut" class="form-control">
                        <option value="">Tous</option>
                        <option value="en_attente" {% if filters.statut == 'en_attente' %}selected{% endif %}>En attente</option>
                        <option value="confirmee" {% if filters.statut == 'confirmee' %}selected{% endif %}>Confirmée</option>
                        <option value="annulee" {% if filters.statut == 'annulee' %}selected{% endif %}>Annulée</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date début</label>
                    <input type="date" name="date_debut" class="form-control" value="{{ filters.date_debut }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date fin</label>
                    <input type="date" name="date_fin" class="form-control" value="{{ filters.date_fin }}">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel me-2"></i>Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    {# Messages Flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Tableau des réservations #}
    {% if reservations is empty %}
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #d1d5db;"></i>
                <h3 class="mt-3">Aucune réservation trouvée</h3>
                <p class="text-muted">Aucune réservation ne correspond à vos critères</p>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>N° Réservation</th>
                                <th>Passager</th>
                                <th>Trajet</th>
                                <th>Date voyage</th>
                                <th>Places</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th>Date réservation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td><strong>{{ reservation.numeroReservation }}</strong></td>
                                    <td>
                                        {{ reservation.passager.prenom }} {{ reservation.passager.nom }}
                                        <br>
                                        <small class="text-muted">{{ reservation.passager.email }}</small>
                                    </td>
                                    <td>
                                        {{ reservation.horaire.trajet.depart }} 
                                        <i class="bi bi-arrow-right"></i> 
                                        {{ reservation.horaire.trajet.destination }}
                                    </td>
                                    <td>
                                        {{ reservation.horaire.dateDepart|date('d/m/Y') }}
                                        <br>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> {{ reservation.horaire.heureDepart|date('H:i') }}
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ reservation.nombrePlaces }} place(s)</span>
                                    </td>
                                    <td>
                                        <strong>{{ reservation.montant }} DT</strong>
                                    </td>
                                    <td>
                                        {% if reservation.statut == 'confirmee' %}
                                            <span class="badge bg-success">Confirmée</span>
                                        {% elseif reservation.statut == 'en_attente' %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% else %}
                                            <span class="badge bg-danger">Annulée</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ reservation.dateReservation|date('d/m/Y H:i') }}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_admin_reservation_show', {'id': reservation.id}) }}" 
                                               class="btn btn-outline-info" 
                                               title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            {% if reservation.statut == 'en_attente' %}
                                                <form method="post" action="{{ path('app_admin_reservation_confirm', {'id': reservation.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('confirm' ~ reservation.id) }}">
                                                    <button type="submit" class="btn btn-outline-success" title="Confirmer">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                </form>
                                            {% endif %}

                                            {% if reservation.statut in ['en_attente', 'confirmee'] %}
                                                <button type="button" 
                                                        class="btn btn-outline-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#cancelModal{{ reservation.id }}"
                                                        title="Annuler">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            {% endif %}

                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal{{ reservation.id }}"
                                                    title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        {# Modal Annulation #}
                                        <div class="modal fade" id="cancelModal{{ reservation.id }}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Annuler la réservation</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Êtes-vous sûr de vouloir annuler la réservation <strong>{{ reservation.numeroReservation }}</strong> ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                                                        <form method="post" action="{{ path('app_admin_reservation_cancel', {'id': reservation.id}) }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
                                                            <button type="submit" class="btn btn-danger">Oui, annuler</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        {# Modal Suppression #}
                                        <div class="modal fade" id="deleteModal{{ reservation.id }}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Supprimer la réservation</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Êtes-vous sûr de vouloir supprimer définitivement la réservation <strong>{{ reservation.numeroReservation }}</strong> ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <form method="post" action="{{ path('app_admin_reservation_delete', {'id': reservation.id}) }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                                            <button type="submit" class="btn btn-danger">Supprimer</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">Total : <strong>{{ reservations|length }}</strong> réservation(s)</p>
                </div>
            </div>
        </div>
    {% endif %}
</div>

<style>
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>
{% endblock %}