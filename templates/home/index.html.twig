<!-- Formulaire de Recherche (Floating Card) -->
<section style="margin-top: -120px; position: relative; z-index: 100;">
    <div class="container">
        <div class="card shadow-lg border-0" style="border-radius: 16px; overflow: hidden;">
            <div class="card-body p-4">
                <!-- Onglet Bus -->
                <div class="mb-4">
                    <button class="btn btn-link text-decoration-none" style="color: #0ea5e9; font-weight: 600; font-size: 1.1rem;">
                        <i class="bi bi-bus-front-fill me-2"></i>Bus
                    </button>
                </div>

                <form action="{{ path('app_search_trajet') }}" method="GET">
                    <div class="row g-3 align-items-end">
                        <!-- Départ -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold mb-2" style="font-size: 0.9rem; color: #1e293b;">
                                <i class="bi bi-geo-alt-fill me-1" style="color: #0ea5e9;"></i>Départ
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-geo-alt-fill" style="color: #0ea5e9;"></i>
                                </span>
                                <input type="text" name="depart" class="form-control form-control-lg border-start-0" placeholder="Tunis" required style="font-size: 1rem;">
                            </div>
                        </div>

                        <!-- Bouton Swap -->
                        <div class="col-auto d-none d-md-block" style="margin-bottom: 8px;">
                            <button type="button" class="btn btn-light rounded-circle" style="width: 48px; height: 48px; padding: 0; border: 2px solid #e2e8f0;">
                                <i class="bi bi-arrow-left-right" style="color: #64748b;"></i>
                            </button>
                        </div>

                        <!-- Arrivée -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold mb-2" style="font-size: 0.9rem; color: #1e293b;">
                                <i class="bi bi-geo-alt-fill me-1" style="color: #ef4444;"></i>Arrivée
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-geo-alt-fill" style="color: #ef4444;"></i>
                                </span>
                                <input type="text" name="arrivee" class="form-control form-control-lg border-start-0" placeholder="Sfax" required style="font-size: 1rem;">
                            </div>
                        </div>

                        <!-- Date de départ -->
                        <div class="col-md-4">
                            <label class="form-label fw-semibold mb-2" style="font-size: 0.9rem; color: #1e293b;">
                                <i class="bi bi-calendar3 me-1" style="color: #0ea5e9;"></i>Date
                            </label>
                            <input type="date" name="date" class="form-control form-control-lg" value="{{ "now"|date("Y-m-d") }}" required>
                        </div>

                        <!-- Date de retour -->
                        <div class="col-md-4">
                            <label class="form-label fw-semibold mb-2" style="font-size: 0.9rem; color: #1e293b;">
                                <i class="bi bi-calendar-check me-1" style="color: #f59e0b;"></i>Date de retour
                            </label>
                            <input type="date" name="date_retour" class="form-control form-control-lg" placeholder="mm/dd/yyyy">
                        </div>

                        <!-- Passagers -->
                        <div class="col-md-4">
                            <label class="form-label fw-semibold mb-2" style="font-size: 0.9rem; color: #1e293b;">
                                <i class="bi bi-people-fill me-1" style="color: #10b981;"></i>Passagers
                            </label>
                            <select name="passagers" class="form-select form-select-lg">
                                <option value="1">1 passager</option>
                                <option value="2">2 passagers</option>
                                <option value="3">3 passagers</option>
                                <option value="4">4 passagers</option>
                                <option value="5">5+ passagers</option>
                            </select>
                        </div>

                        <!-- Bouton Rechercher -->
                        <div class="col-12 mt-4">
                            <button type="submit" class="btn btn-lg w-100" style="background: #0ea5e9; color: white; font-weight: 600; padding: 16px; border-radius: 8px; font-size: 1.1rem;">
                                <i class="bi bi-search me-2"></i>Rechercher
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

